generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                     String  @id @default(auto()) @map("_id") @db.ObjectId
  name                   String
  email                  String  @unique
  password               String
  emailVerified          Boolean @default(false)
  emailVerificationToken String?
  changePasswordToken    String?
}

model Blog {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  body  String
}
